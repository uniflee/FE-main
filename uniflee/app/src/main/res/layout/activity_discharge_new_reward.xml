<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".discharge.DischargeNewRewardActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_back_btn"/>
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/pretendardbold"
            android:text="리워드 등록하기"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/img"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:background="@drawable/img_new_reward"
        android:layout_marginTop="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="25dp"
        android:layout_width="0dp"
        android:layout_height="292dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/predict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardlight"
                android:textSize="26sp"
                android:text="재질명"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardlight"
                android:textSize="26sp"
                android:text="을 분리수거 할 시"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/point"
                android:textSize="26sp"
                android:fontFamily="@font/pretendardmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"/>
            <TextView
                android:textSize="26sp"
                android:fontFamily="@font/pretendardmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 포인트를 지급합니다"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/maintext"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/pretendardregular"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:layout_marginStart="24dp"
            android:layout_marginTop="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해당 재질명을 1 kg 배출 할 시"/>
        <LinearLayout
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/pretendardregular"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약 "/>
            <TextView
                android:id="@+id/co2"
                android:fontFamily="@font/pretendardregular"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"/>
            <TextView
                android:fontFamily="@font/pretendardregular"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg/Co2를 감소시킬 수 있어요!"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="center"
            android:src="@drawable/img_underline"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/counting"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/maintext"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:textSize="18sp"
            android:textColor="@color/text"
            android:text="갯수 설정"/>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">
            <TextView
                android:id="@+id/button_minus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_count"
                android:textColor="@color/text"
                android:gravity="center"
                android:text="-"/>
            <TextView
                android:id="@+id/text_number"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/button_plus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_count"
                android:textColor="@color/text"
                android:gravity="center"
                android:text="+" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:textSize="12sp"
            android:textColor="#8E8E8E"
            android:text="각 재질 당 리워드 제공은 최대 5개까지 가능합니다"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_underline"
            android:layout_marginTop="23dp"
            app:tint="@color/text" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/counting"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:text="총 지급 포인트"/>
            <TextView
                android:id="@+id/total_point"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:textSize="20sp"
                android:textColor="@color/main"
                android:text="000포인트"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="12sp"
            android:textColor="#8E8E8E"
            android:text="지급 받은 포인트는 리워드 스토어에서 사용 가능합니다"/>
    </LinearLayout>
    <TextView
        android:id="@+id/get_reward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_blue"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardsemibold"
        android:textSize="18sp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="리워드 포인트받기"/>
</androidx.constraintlayout.widget.ConstraintLayout>